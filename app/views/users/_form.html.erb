<div class="text-field my-3">
  <div class="input-group rounded-pill border-0 bg-light text-primary">
    <%= tag.i class:"bi bi-envelope-fill px-3 py-2" %>
    <%= form.text_field :email, placeholder: "email", type: 'email', class: "rounded-pill form-control border-0 bg-light" %>
  </div>
  <div class="password-field my-3">
    <div class="input-group rounded-pill border-0 bg-light text-primary">
      <%= tag.i class:"bi bi-key-fill px-3 py-2" %>
      <%= form.password_field :password, placeholder: "password", class: "form-control border-0 bg-light rounded-pill" %>
    </div>
  </div>
