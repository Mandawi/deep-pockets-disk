<div class="container-fluid bg-white mt-5 shadow-lg p-5 w-75 rounded">
  <div class="row">
    <div class="offset-md-3 col-md-6 text-center">
      <div id="clearance" class="sign-up">
        <h2 class="mb-5 fw-bold text-primary">Deep Pockets Disk</h2>

        <%= form_for @user do |form| %>
          <%= render partial: '/users/form', object: form %>

          <div class="submit-field my-4 d-grid gap-1">
            <%= button_tag class: "btn btn-primary rounded-pill border-0" do %>
              Sign up <i class="bi bi-person-plus"></i>
            <% end %>
          </div>

          <div class="other-links mt-2">
            <%= link_to "Already have an account?", sign_in_path %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
