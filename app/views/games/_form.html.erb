<%= form_with(model: @game, id: dom_id(@game)) do |form| -%>
  <% if @game.errors.any? %>
    <% @game.errors.full_messages.each do |message| %>
      <div class="alert alert-danger" role="alert">
        <%= message %>
      </div>
    <% end %>
  <% end %>

  <div class="card">
    <ul class="list-group list-group-flush">
    </ul>
    <div class="card-footer">
      <%= form.submit "Create a new game", class: "btn btn-primary float-right"%>
    </div>
  </div>
<% end %>
