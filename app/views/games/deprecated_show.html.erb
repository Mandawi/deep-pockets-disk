<ol class="breadcrumb">
  <li class="breadcrumb-item"><%= link_to "Games", games_path %></li>
  <li class="breadcrumb-item active mr-auto"><%= @game.id %></li> 
</ol>
<div class="card">
  <ul class="list-group list-group-flush">
  </ul>
  <div class = 'm-3 centered'>
    <% @sentence.split.each do |word| %>
      <% word.split('').each do |letter| %>
        <%= render partial: 'puzzle_letter', locals: {letter: letter, opened_letters: @opened_letters} %>
      <% end %>
      <br>
    <% end %>
  </div>
  <%= form_with url: @game, method: :get do |form| %>
    <%= form.label :guess, "Your guess:" %>
    <%= form.text_field :guess, maxlength: 1 %>
    <%= form.submit "Submit" %>
  <% end %>
  <%= @total %>
</div>
